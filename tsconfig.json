{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/modules/auth/services.ts", "app/_compoents/Dialog/page.tsx", "config/aws/aws-config.ts", "app/auth/services.ts", "lib/config/amplify.js", "lib/services/auth.js", "app/layout.jsx", "app/page.jsx", "app/auth/pages/login/page.jsx", "app/api/query/route.js", "app/_compoents/Widget.jsx"],
  "exclude": ["node_modules"]
}
